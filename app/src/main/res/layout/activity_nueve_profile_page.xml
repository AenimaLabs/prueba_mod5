<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Nueve_ProfilePageActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/button"
        style="@style/label_negro"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorraro"
        android:drawableLeft="@drawable/profile_icon"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:drawablePadding="10dp"
        android:stateListAnimator="@null"
        android:text="Mi información"
        android:textColor="@color/negro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/label_negro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorraro"
        android:drawablePadding="10dp"
        android:stateListAnimator="@null"
        android:text="Mi información"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:drawableStartCompat="@drawable/profile_icon"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

</androidx.constraintlayout.widget.ConstraintLayout>